---
// Modal para agregar/editar recetas
---

<div
  id="recipe-modal"
  class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden"
  role="dialog"
  aria-labelledby="recipe-modal-title"
  aria-modal="true"
>
  <div
    class="relative top-10 mx-auto p-5 border w-full max-w-2xl shadow-lg rounded-md bg-white"
  >
    <div class="mt-3">
      <h3
        id="recipe-modal-title"
        class="text-lg font-medium text-gray-900 mb-4"
      >
        Agregar Receta
      </h3>

      <form id="recipe-form" class="space-y-6">
        <!-- Informaci√≥n b√°sica -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- Nombre de la receta -->
          <div class="md:col-span-2">
            <label
              for="recipe-name"
              class="block text-sm font-medium text-gray-700"
            >
              Nombre de la Receta
            </label>
            <input
              type="text"
              id="recipe-name"
              name="name"
              required
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm"
              placeholder="Ej: Gallo Pinto, Pasta con Verduras"
            />
          </div>

          <!-- Porciones -->
          <div>
            <label
              for="recipe-servings"
              class="block text-sm font-medium text-gray-700"
            >
              Porciones
            </label>
            <input
              type="number"
              id="recipe-servings"
              name="servings"
              min="1"
              required
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm"
              placeholder="4"
            />
          </div>

          <!-- Categor√≠a -->
          <div>
            <label
              for="recipe-category"
              class="block text-sm font-medium text-gray-700"
            >
              Categor√≠a
            </label>
            <select
              id="recipe-category"
              name="category"
              required
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm"
            >
              <option value="">Seleccionar categor√≠a</option>
              <option value="desayunos">üåÖ Desayunos</option>
              <option value="almuerzos">üçΩÔ∏è Almuerzos</option>
              <option value="cenas">üåô Cenas</option>
              <option value="postres">üç∞ Postres</option>
              <option value="bebidas">ü•§ Bebidas</option>
              <option value="snacks">ü•® Snacks</option>
            </select>
          </div>
        </div>
        <!-- Notas -->
        <div>
          <label
            for="recipe-description"
            class="block text-sm font-medium text-gray-700"
          >
            Notas
          </label>
          <textarea
            id="recipe-description"
            name="description"
            rows="2"
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm"
            placeholder="Notas adicionales sobre la receta..."></textarea>
        </div>

        <!-- Ingredientes -->
        <div>
          <div class="flex justify-between items-center mb-3">
            <label class="block text-sm font-medium text-gray-700">
              Ingredientes
            </label>
            <button
              type="button"
              id="add-ingredient-btn"
              class="text-green-600 hover:text-green-800 text-sm font-medium cursor-pointer"
            >
              + Agregar Ingrediente
            </button>
          </div>

          <div id="ingredients-container" class="space-y-3">
            <!-- Los ingredientes se a√±aden din√°micamente aqu√≠ -->
          </div>
        </div>
        <!-- Tags -->
        <div>
          <label
            for="recipe-tags"
            class="block text-sm font-medium text-gray-700"
          >
            Tags (separados por comas)
          </label>
          <input
            type="text"
            id="recipe-tags"
            name="tags"
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm"
            placeholder="pinto, arroz con palmito, tortillas, tofu frito"
          />
          <p class="mt-1 text-xs text-gray-500">
            Ej: pinto, arroz con palmito, tortillas, tofu frito, casado
          </p>
        </div>

        <!-- Botones -->
        <div class="flex justify-end space-x-3 pt-4 border-t">
          <button
            type="button"
            id="recipe-cancel-btn"
            class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 cursor-pointer"
          >
            Cancelar
          </button>
          <button
            type="submit"
            id="recipe-save-btn"
            class="px-4 py-2 text-sm font-medium text-white bg-green-600 border border-transparent rounded-md hover:bg-green-700 cursor-pointer"
          >
            <span id="recipe-save-spinner" class="hidden">
              <span class="animate-spin inline-block mr-2 text-lg">‚è≥</span>
            </span>
            <span id="recipe-save-text">Guardar Receta</span>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
